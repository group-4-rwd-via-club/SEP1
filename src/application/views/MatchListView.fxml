<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox minWidth="700.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.192" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MatchListViewController">
   <children>
      <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" prefWidth="56.0" text="Add">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="printButton" mnemonicParsing="false" prefWidth="56.0" text="Print" />
            <Label text="Search: ">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="searchText" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <TableView fx:id="tableView" prefHeight="323.0" prefWidth="580.0">
         <columns>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Date">
               <cellValueFactory>
                  <PropertyValueFactory property="date"/>
               </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Type">
               <cellValueFactory>
                  <PropertyValueFactory property="matchType"/>
               </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Location" >
                  <cellValueFactory>
                     <PropertyValueFactory property="location"/>
                  </cellValueFactory>
               </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Opponent" >
                  <cellValueFactory>
                     <PropertyValueFactory property="opponent"/>
                  </cellValueFactory>
               </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Roster" >
                  <cellValueFactory>
                     <PropertyValueFactory property="roster"/>
                  </cellValueFactory>
               </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="-1.0" text="Result" >
               <cellValueFactory>
                  <PropertyValueFactory property="result"/>
               </cellValueFactory>
            </TableColumn>
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </TableView>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
</VBox>
